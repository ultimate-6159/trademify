[Unit]
Description=Trademify Auto Trading Service
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/trademify/backend
ExecStart=/usr/bin/python -m uvicorn api.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10
StandardOutput=append:/var/log/trademify/trading.log
StandardError=append:/var/log/trademify/trading.log

# Environment
Environment="PYTHONUNBUFFERED=1"
EnvironmentFile=/opt/trademify/backend/.env

[Install]
WantedBy=multi-user.target
