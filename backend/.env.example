# =============================================
# TRADEMIFY ENVIRONMENT CONFIGURATION
# =============================================

# Environment
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8000

# =============================================
# ðŸ”’ SECURITY CONFIGURATION (REQUIRED FOR PRODUCTION!)
# =============================================
# API Keys for authentication (comma-separated for multiple keys)
# Generate secure keys: python -c "import secrets; print(secrets.token_urlsafe(32))"
TRADEMIFY_API_KEYS=your-secure-api-key-here

# CORS Origins (comma-separated URLs)
# Use specific domains in production, NEVER use "*" in production!
CORS_ORIGINS=http://localhost:80,http://localhost:5173,https://your-dashboard.com

# Firebase Configuration
FIREBASE_CREDENTIALS_PATH=config/firebase_credentials.json
FIREBASE_DATABASE_URL=
FIREBASE_PROJECT_ID=

# Data Configuration
HISTORY_YEARS=5
WINDOW_SIZE=60
FUTURE_CANDLES=10

# Pattern Matching
MIN_CORRELATION=0.85
CONFIDENCE_THRESHOLD=70
TOP_K_PATTERNS=10

# =============================================
# AUTO TRADING CONFIGURATION
# =============================================
TRADING_ENABLED=false
PAPER_TRADING=true
MAX_RISK_PER_TRADE=2.0
MAX_DAILY_LOSS=5.0
MAX_POSITIONS=5
MIN_CONFIDENCE=70.0

# Broker Type: BINANCE, MT5, or MOCK
BROKER_TYPE=MOCK

# =============================================
# BINANCE CONFIGURATION (for Crypto)
# =============================================
# Testnet: https://testnet.binance.vision/
# Real: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=
BINANCE_API_SECRET=
BINANCE_TESTNET=true

# =============================================
# METATRADER 5 CONFIGURATION (for Forex/CFD)
# =============================================
# Note: MT5 requires Windows!
# For Linux/Mac, use BROKER_TYPE=MOCK
MT5_LOGIN=0
MT5_PASSWORD=
MT5_SERVER=
MT5_PATH=C:\Program Files\MetaTrader 5\terminal64.exe
