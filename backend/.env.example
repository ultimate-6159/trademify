# =============================================
# TRADEMIFY CONFIGURATION
# Copy to .env and edit with your values
# =============================================

# Environment
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=*

# =============================================
# METATRADER 5 CONFIGURATION (REQUIRED)
# =============================================
# Get these from your MT5 broker account
MT5_LOGIN=your_account_number
MT5_PASSWORD=your_password
MT5_SERVER=Your-Broker-Server
MT5_PATH=C:\Program Files\MetaTrader 5\terminal64.exe

# =============================================
# TRADING SETTINGS
# =============================================
TRADING_ENABLED=true
PAPER_TRADING=false
BROKER_TYPE=MT5

# Trading Mode: AGGRESSIVE, BALANCED, CONSERVATIVE, SNIPER, EXTREME
# BALANCED: Win Rate ~70%, Normal Frequency  
# CONSERVATIVE: Win Rate ~80%, Low Frequency
# SNIPER: Win Rate ~85%+, Very Low Frequency (Best Quality Only)
# ?? EXTREME: Win Rate ~89%, Maximum Trades, Maximum Profit!
TRADING_MODE=EXTREME

# Risk Management - ?? EXTREME CONFIG!
MAX_RISK_PER_TRADE=3.0
MAX_DAILY_LOSS=20.0
MAX_POSITIONS=10
MAX_DRAWDOWN=30.0
MIN_CONFIDENCE=55.0

# =============================================
# ?? 20-LAYER INTELLIGENCE SETTINGS
# =============================================
# Filter #1: Pass Rate - % of layers that must approve
MIN_PASS_RATE=0.30

# Filter #2: High Quality - layers with score >= 70
MIN_HIGH_QUALITY=1

# Filter #3: Key Layer Agreement (Layer 5,6,7,9,10)
MIN_KEY_AGREEMENT=0.20

# =============================================
# ??? TRAILING STOP (KEY TO PROFIT!)
# =============================================
TRAILING_STOP_ENABLED=true
TRAILING_ACTIVATION_PCT=0.15
TRAILING_DISTANCE_PCT=0.30

# =============================================
# PATTERN MATCHING
# =============================================
HISTORY_YEARS=5
WINDOW_SIZE=60
FUTURE_CANDLES=10
MIN_CORRELATION=0.80
CONFIDENCE_THRESHOLD=55
TOP_K_PATTERNS=20

# =============================================
# AI ANALYSIS WEIGHTS
# =============================================
PATTERN_WEIGHT=0.30
TREND_WEIGHT=0.20
VOLUME_WEIGHT=0.15
RECENCY_WEIGHT=0.10
VOLATILITY_WEIGHT=0.10
SESSION_WEIGHT=0.10
MOMENTUM_WEIGHT=0.10

# =============================================
# FILTERS (true/false) - ?? EXTREME: Disable some for more trades
# =============================================
TREND_FILTER_ENABLED=true
VOLUME_FILTER_ENABLED=false
RECENCY_FILTER_ENABLED=false
VOLATILITY_FILTER_ENABLED=true
SESSION_FILTER_ENABLED=false
MOMENTUM_FILTER_ENABLED=true
DRAWDOWN_PROTECTION_ENABLED=true
ADAPTIVE_THRESHOLD_ENABLED=false

# =============================================
# FIREBASE (OPTIONAL - for dashboard sync)
# =============================================
FIREBASE_CREDENTIALS_PATH=config/firebase_credentials.json
FIREBASE_DATABASE_URL=
FIREBASE_PROJECT_ID=

# =============================================
# BINANCE (OPTIONAL - for Crypto trading)
# =============================================
BINANCE_API_KEY=
BINANCE_API_SECRET=
BINANCE_TESTNET=true
